   <body class="login-img3-body">

    <div class="container">
 

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: 'login-form'}) do |f| %>
  <div class="login-wrap">
        <p class="login-img"><i class="icon-lock"></i> </p>
         <div class="input-group">
          	<span class="input-group-addon"><i class="icon-user"></i> </span>
          	<%= f.email_field :email,  :class=>"form-control" , :placeholder =>"Email"%>
        </div>
      	
      	 

	  <div><%= f.submit "Send me reset password instructions" , :class=>"btn btn-primary btn-lg btn-block"%></div><br>
	  <div><%= link_to "Sign up", new_registration_path(resource_name) , :class => "btn btn-info btn-lg btn-block" %></div><br>
	  <div><%= link_to "Log in", new_session_path(resource_name) , :class => "btn btn-success btn-lg btn-block" %></div><br>

  </div>
<% end %>
 

    </div>


