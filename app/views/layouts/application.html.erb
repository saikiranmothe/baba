
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="/assets/favicon-white-blue.png">

    <title>DEMO BLOG</title>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    
    <!-- Bootstrap CSS -->    
    <link href="/assets/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="/assets/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
   
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
 
      <!-- Custom styles -->
      <link href="/assets/style.css" rel="stylesheet">
      <link href="/assets/style-responsive.css" rel="stylesheet" />
      <link href="/assets/jquery-ui-1.10.4.min.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 -->
    <!--[if lt IE 9]>
      <script src="/assets/html5shiv.js"></script>
      <script src="/assets/respond.min.js"></script>
      <script src="/assets/lte-ie7.js"></script>
    <![endif]-->
  </head>

  <body>
    <section id="container" class="">

    <% if user_signed_in? %>
    <!-- container section start -->
          <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="" data-original-title="Toggle Navigation" data-placement="bottom"></div>
            </div>

            <!--logo start-->
            <a href="/" class="logo">DEMO<span class="lite"> BLOG</span></a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul class="nav top-menu">                    
                    <li>
                        
                    </li>                    
                </ul>
                <!--  search form end -->                
            </div>

              

              <div class="top-nav notification-row">                
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->
                    <% if user_signed_in? %>
                      <li class="dropdown">
                          <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                              <span class="profile-ava">
                                  <img src="/assets/avatar-mini4.jpg">
                              </span>&nbsp;
                              <span class="username"> <%= current_user.email %></span>
                              <b class="caret"></b>
                          </a>
                          <ul class="dropdown-menu extended logout">
                              <div class="log-arrow-up"></div>
                              <li class="eborder-top">
                                  <%= link_to '<i class="fa fa-user fa-white"></i> Profile'.html_safe, edit_user_registration_path %>
                              </li>
                              <li>
                                <%= link_to '<i class="fa fa-sign-out fa-white"></i> Sign Out'.html_safe, destroy_user_session_path, :method => :delete %>
                              </li>
                          </ul>
                      </li>
                    <% else %>
                       <li><%= link_to "Sign up", new_user_registration_path %></li>
                      <li><%= link_to "Sign in", new_user_session_path %></li>
                    <% end %>
                    <!-- user login dropdown end -->
                </ul>
             </div>
        </header>      
        <!--header end-->

        <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu">                
                  <li class="active">
                      <a class="" href="/">
                          <i class="fa fa-home"></i>
                          <span>Dashboard</span>
                      </a>
                  </li>
                  <li class="sub-menu">
                      <a href="/uploads" class="">
                          <i class="fa  fa-file-pdf-o"></i>
                          <span>PDF Upload</span>
                       </a>
                  </li>
                  <li class="sub-menu">
                      <a href="/uploads" class="">
                          <i class="fa fa-file-image-o"></i>
                          <span>IMAGE Upload</span>
                       </a>
                  </li>
                  <li class="sub-menu">
                      <a href="/uploads" class="">
                          <i class="fa fa-file-audio-o"></i>
                          <span>AUDIO Upload</span>
                       </a>
                  </li>
                  <li class="sub-menu">
                      <a href="/uploads" class="">
                          <i class="fa  fa-file-video-o"></i>
                          <span>VIDEO Upload</span>
                       </a>
                  </li>

                  
              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->
      
    <% end %>

    
    <!--main content start-->
      <section id="main-content">
          <section class="wrapper"> 

          <%= yield %>
          </section>
      </section>
      <!--main content end-->
     </section>

 <!-- javascripts -->
    <script src="/assets/jquery.js"></script>
